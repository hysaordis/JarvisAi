{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "voice-interface-app",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "scope": ["$APPDATA/*", "$APPDATA/settings.dat"]
      },
      "path": {
        "all": true
      },
      "window": {
        "all": false,
        "center": true,
        "setDecorations": true,
        "setAlwaysOnTop": true,
        "setIgnoreCursorEvents": true,
        "show": true,
        "hide": true,
        "startDragging": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "msi", "app", "dmg"],
      "identifier": "com.voice-interface-app.dev",
      "publisher": "Alita",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost data:; style-src 'self' 'unsafe-inline'; connect-src 'self' https://localhost:* ws://localhost:*"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 500,
        "width": 500,
        "resizable": false,
        "title": "Alita Assistant",
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "center": true,
        "skipTaskbar": true,
        "visible": true,
        "focus": true
      }
    ]
  }
}